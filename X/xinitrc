# Read X resources
xrdb "$HOME"/.Xresources

# Map Caps Lock as a Ctrl key
setxkbmap -option ctrl:nocaps

# Apply background image
feh --bg-scale -- "$HOME"/.i3/draugen.jpg

# Start xscreensaver(1)
xscreensaver &

# Start urxvtd(1)
urxvtd -o -q &

# Start xbindkeys(1)
xbindkeys

# Start window manager
exec i3

