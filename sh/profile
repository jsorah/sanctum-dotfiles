# Set editor
export EDITOR='vi'
export VISUAL="$EDITOR"

# Set pager
export PAGER='less'

# Add ~/.local/bin to PATH
if [ -d "$HOME/.local/bin" ]; then
    PATH="$HOME/.local/bin:$PATH"
fi
export PATH

# Load any supplementary scripts
if [ -d "$HOME/.profile.d" ]; then
    for file in $HOME/.profile.d/*; do
        . $file
    done
fi

