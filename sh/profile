# Set editor
EDITOR='vi'
VISUAL=$EDITOR
export EDITOR VISUAL

# Set pager
PAGER='less'
export PAGER

# Add ~/.local/bin to PATH if it exists
if [ -d "$HOME/.local/bin" ]; then
    PATH="$HOME/.local/bin:$PATH"
fi
export PATH

# Load all supplementary scripts in ~/.profile.d
if [ -d "$HOME/.profile.d" ]; then
    for file in "$HOME/.profile.d"/*; do
        . "$file"
    done
fi

